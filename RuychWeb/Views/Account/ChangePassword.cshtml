@model RuychWeb.Models.DTO.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<style>
    #slider {
        display: none;
    }

    .change-password-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f5f5f5;
    }

    .change-password-box {
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

        .change-password-box h3 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

    .form-group label {
        font-weight: 500;
    }

    .btn-info {
        width: 100%;
        padding: 10px;
        font-weight: 500;
    }

    .text-info {
        display: block;
        text-align: center;
        margin-bottom: 15px;
    }
</style>

<div class="change-password-container">
    <div class="change-password-box">
        <h3>ĐỔI MẬT KHẨU</h3>
        <form asp-action="ChangePassword" method="post">
            @if (TempData["msg"] != null)
            {
                <span class="text-info">@TempData["msg"]</span>
            }

            <div class="form-group">
                <label>MẬT KHẨU HIỆN TẠI</label>
                <input type="password" class="form-control" asp-for="CurrentPassword" />
                <span class="text-danger" asp-validation-for="CurrentPassword"></span>
            </div>

            <div class="form-group">
                <label>MẬT KHẨU MỚI</label>
                <input type="password" class="form-control" asp-for="NewPassword" />
                <span class="text-danger" asp-validation-for="NewPassword"></span>
            </div>

            <div class="form-group">
                <label>NHẬP LẠI MẬT KHẨU MỚI</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>

            <button type="submit" class="btn btn-info">LƯU THÔNG TIN</button>
        </form>
    </div>
</div>
