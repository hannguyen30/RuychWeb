@model RuychWeb.Models.DTO.RegistrationModel
@{
    ViewData["Title"] = "Đăng ký";
}
<style>
    #slider {
        display: none;
    }

    #register {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f9f9f9;
    }

    .signup-form {
        background: #fff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 450px;
    }

        .signup-form h3 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
            font-weight: 600;
        }

        .signup-form .form-group label {
            font-weight: 500;
            color: #555;
        }

        .signup-form .form-control {
            border-radius: 6px;
            padding: 10px 12px;
        }

        .signup-form button {
            width: 100%;
            margin-top: 20px;
            border-radius: 6px;
            background-color: #5bc0de;
            color: white;
            padding: 10px 0;
            border: none;
        }

    .text-danger {
        font-size: 0.9em;
    }

    .text-info {
        font-size: 0.95em;
        font-weight: 500;
    }

    .validation-summary-errors {
        color: red;
        font-size: 0.95em;
        margin-top: 10px;
    }
</style>

<section id="register">
    <div class="signup-form">
        <h3>ĐĂNG KÝ TÀI KHOẢN</h3>
        <form asp-action="Registration" method="post">
            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    <span class="text-info">@TempData["msg"]</span>
                </div>
            }

            <div class="form-group">
                <label>EMAIL</label>
                <input type="text" class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label>MẬT KHẨU</label>
                <input type="password" class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label>NHẬP LẠI MẬT KHẨU</label>
                <input type="password" class="form-control" asp-for="PasswordConfirm" />
                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
            </div>
            <button type="submit" class="btn btn-info">ĐĂNG KÝ</button>
        </form>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}