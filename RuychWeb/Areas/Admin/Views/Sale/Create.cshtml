@model RuychWeb.Models.DTO.Sale

@{
    ViewData["Title"] = "Thêm chương trình giảm giá";
}

<h3>Thêm chương trình giảm giá</h3>

<form method="post" asp-action="Create" asp-controller="Sale" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Tên chương trình</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Discount" class="control-label">Mức giảm giá (% hoặc VND)</label>
        <input asp-for="Discount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
</form>

<a href="@Url.Action("Index", "Sale", new { area = "Admin" })">Quay về danh sách</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
