@model RuychWeb.Models.DTO.Supplier

@{
    ViewData["Title"] = "Edit Supplier";
}

<h3 class="mb-4 text-primary">Sửa thông tin nhà cung cấp</h3>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="SupplierId" />  <!-- Thêm hidden input để giữ SupplierId -->

    <div class="form-group">
        <label asp-for="Name" class="control-label">Tên nhà cung cấp</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

<a href="@Url.Action("Index", "Supplier")" class="btn btn-link mt-2">Quay về danh sách</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
