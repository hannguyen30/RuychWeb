@model RuychWeb.Areas.Admin.Models.CategoryViewModel
<h3 class="text-primary">Thêm Danh Mục Mới</h3>

<div class="card shadow mb-4">
    <div class="card-body">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="form-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Thêm</button>
            </div>
        </form>
    </div>
</div>

<a href="@Url.Action("Index", "Category", new { area = "Admin" })">Quay về danh sách</a>