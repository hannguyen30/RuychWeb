@model RuychWeb.Areas.Admin.Models.CategoryViewModel

<h3 class="text-primary">Sửa Danh Mục</h3>

<div class="card shadow mb-4">
    <div class="card-body">
        <form method="post" asp-action="Edit">
            <input type="hidden" asp-for="CategoryId" />

            <div class="form-group">
                <label for="Name">Tên danh mục</label>
                <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Lưu </button>
            </div>
        </form>
    </div>
</div>

<a href="@Url.Action("Index", "Category", new { area = "Admin" })">Quay về danh sách</a>